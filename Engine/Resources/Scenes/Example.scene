meta
{
    version 0.0.1
    name "Example Scene"
    camera Main
}

entity
{
    id Main
    add Transform vec3(0, 0, -5) vec3(0) vec3(0)
    add Camera 0 0.1 100. 90. vec2(0)
    
    add PlayerController 2.3
    add CameraController 10. true
}

entity
{
    id Floor
    add Transform vec3(0, -1, 0) vec3(2, 1, 2) vec3(0)
    add Renderer mesh("Objects/cube.obj") shader(lit)
    
    add BoxCollider
}

entity
{
    id Cube
    add Transform vec3(0, 2, 0) vec3(1) vec3(0)
    add Renderer mesh("Objects/cube.obj") shader(unlit)
    
    add BoxCollider
    add Rigidbody 1.
}
