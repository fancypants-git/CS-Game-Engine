scene "Physics Test"
camera Main

entity Main
add Transform vec3(0, 0, -5) vec3(0) vec3(0)
add Camera 1   0.1 100.   90. vec2(10)

# rotates the camera around the world origin with radius 3 and time 5
# add CameraRotator 3 5


entity floor
add Transform vec3(0, -2, 0) vec3(5, 1, 5) vec3(0)
add BoxCollider
add Renderer mesh(Objects/cube.obj) shader(unlit)

entity cube
add Transform vec3(0, 5, 0) vec3(1.5) vec3(0)
add Renderer mesh(Objects/dragon.obj) shader(lit)
add Rigidbody 0 -9.81
add BoxCollider